<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Subdomain Tree View -->
    <record id="view_subdomain_tree" model="ir.ui.view">
        <field name="name">dns.subdomain.tree</field>
        <field name="model">dns.subdomain</field>
        <field name="arch" type="xml">
            <tree string="Subdomains">
                <field name="name"/>
                <field name="domain_id"/>
                <field name="full_domain"/>
                <field name="conversion_method"/>
                <field name="value"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Subdomain Form View -->
    <record id="view_subdomain_form" model="ir.ui.view">
        <field name="name">dns.subdomain.form</field>
        <field name="model">dns.subdomain</field>
        <field name="arch" type="xml">
            <form string="Subdomain">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. www"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="domain_id"/>
                            <field name="full_domain" readonly="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="conversion_method"/>
                            <field name="value" placeholder="e.g. 192.168.1.1 or target.example.com"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Subdomain Search View -->
    <record id="view_subdomain_search" model="ir.ui.view">
        <field name="name">dns.subdomain.search</field>
        <field name="model">dns.subdomain</field>
        <field name="arch" type="xml">
            <search string="Subdomains">
                <field name="name"/>
                <field name="domain_id"/>
                <field name="full_domain"/>
                <field name="value"/>
                <filter string="A Records" name="a_records" domain="[('conversion_method', '=', 'a')]"/>
                <filter string="CNAME Records" name="cname_records" domain="[('conversion_method', '=', 'cname')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Domain" name="domain" context="{'group_by': 'domain_id'}"/>
                    <filter string="Conversion Method" name="conversion_method" context="{'group_by': 'conversion_method'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Subdomain Action -->
    <record id="action_subdomains" model="ir.actions.act_window">
        <field name="name">Subdomains</field>
        <field name="res_model">dns.subdomain</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_subdomain_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subdomain!
            </p>
            <p>
                Manage subdomains with A or CNAME records.
            </p>
        </field>
    </record>
</odoo>
