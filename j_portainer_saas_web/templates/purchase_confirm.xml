<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase_confirm" name="SaaS Package Purchase Confirmation">
        <t t-set="head_website">
            <t t-call-assets="web.assets_frontend"/>
            <link href="/j_portainer_saas_web/static/src/css/purchase_confirm.css" rel="stylesheet"/>
            <script src="/j_portainer_saas_web/static/src/js/purchase_confirm.js"></script>
        </t>
        <main>
            <div id="wrap" class="oe_structure oe_empty">
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-lg-8">
                            
                            <!-- Breadcrumb Navigation -->
                            <nav aria-label="breadcrumb" class="mb-4">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#" class="text-muted">Review Order</a></li>
                                    <li class="breadcrumb-item"><a href="#" class="text-muted">Shipping</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Payment</li>
                                </ol>
                            </nav>
                            
                            <!-- Main Title -->
                            <h1 class="mb-4">Confirm order</h1>
                            

                            
                            <!-- Payment Methods Section -->
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title mb-4">CHOOSE A PAYMENT METHOD</h5>
                                    
                                    <t t-if="is_free_trial == 'true'">
                                        <div class="alert alert-info">
                                            <i class="fa fa-info-circle me-2"></i>
                                            This is a free trial. No payment required.
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <t t-if="payment_acquirers">
                                            <form id="saasPaymentForm" action="/payment/process" method="post">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="package_id" t-att-value="package.id"/>
                                                <input type="hidden" name="billing_cycle" t-att-value="billing_cycle"/>
                                                <input type="hidden" name="amount" t-att-value="price"/>
                                                <input type="hidden" name="currency_id" t-att-value="request.env.company.currency_id.id"/>
                                                <input type="hidden" name="partner_id" t-att-value="request.env.user.partner_id.id"/>
                                                <input type="hidden" name="reference" t-att-value="'SAAS-' + str(package.id) + '-' + billing_cycle"/>
                                                
                                                <div class="payment-methods">
                                                    <t t-foreach="payment_acquirers" t-as="acquirer">
                                                        <div class="form-check payment-method-item mb-3 p-3 border rounded">
                                                            <input class="form-check-input" type="radio" name="acquirer_id" 
                                                                   t-att-id="'acquirer_' + str(acquirer.id)" 
                                                                   t-att-value="acquirer.id"
                                                                   t-att-checked="acquirer_index == 0"/>
                                                            <label class="form-check-label d-flex align-items-center w-100" 
                                                                   t-att-for="'acquirer_' + str(acquirer.id)">
                                                                <div class="d-flex align-items-center justify-content-between w-100">
                                                                    <span class="payment-method-name" t-esc="acquirer.name"/>
                                                                    <t t-if="acquirer.image">
                                                                        <img t-att-src="'/web/image/payment.provider/' + str(acquirer.id) + '/image'" 
                                                                             t-att-alt="acquirer.name" 
                                                                             class="payment-method-logo"
                                                                             style="max-height: 30px; max-width: 60px;"/>
                                                                    </t>
                                                                    <t t-else="">
                                                                        <span class="badge bg-secondary">
                                                                            <i class="fa fa-credit-card"></i>
                                                                        </span>
                                                                    </t>
                                                                </div>
                                                            </label>
                                                        </div>
                                                    </t>
                                                </div>
                                            </form>
                                        </t>
                                        <t t-else="">
                                            <div class="alert alert-warning">
                                                <i class="fa fa-exclamation-triangle me-2"></i>
                                                No payment methods available. Please contact support.
                                            </div>
                                        </t>
                                    </t>
                                </div>
                            </div>
                            
                        </div>
                        
                        <!-- Order Summary Sidebar -->
                        <div class="col-lg-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">Order summary</h6>
                                    <small class="text-muted">1 item(s) - <span t-esc="currency_symbol"/><span t-esc="price"/></small>
                                </div>
                                <div class="card-body">
                                    <!-- Package Item -->
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h6 class="mb-1" t-esc="package.pkg_name"/>
                                            <small class="text-muted"><span t-esc="billing_cycle.title()"/> billing</small>
                                        </div>
                                        <div class="text-end">
                                            <div><span t-esc="currency_symbol"/><span t-esc="price"/></div>
                                        </div>
                                    </div>
                                    
                                    <hr/>
                                    
                                    <!-- Pricing Breakdown -->
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal</span>
                                        <span><span t-esc="currency_symbol"/> <span t-esc="price"/></span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Taxes</span>
                                        <span><span t-esc="currency_symbol"/> 0.00</span>
                                    </div>
                                    
                                    <hr/>
                                    
                                    <div class="d-flex justify-content-between mb-3">
                                        <strong>Total</strong>
                                        <strong><span t-esc="currency_symbol"/> <span t-esc="price"/></strong>
                                    </div>
                                    
                                    <!-- Discount Code -->
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Discount code..."/>
                                        <button class="btn btn-outline-secondary" type="button">Apply</button>
                                    </div>
                                    
                                    <!-- Action Buttons -->
                                    <div class="d-grid gap-2">
                                        <t t-if="is_free_trial == 'true'">
                                            <button type="button" class="btn btn-primary btn-lg" id="saasStartBtn" 
                                                    t-att-data-package-id="package.id" 
                                                    t-att-data-billing-cycle="billing_cycle" 
                                                    t-att-data-is-free-trial="is_free_trial">
                                                Start Free Trial
                                            </button>
                                        </t>
                                        <t t-else="">
                                            <button type="button" class="btn btn-primary btn-lg" id="saasPayNowBtn" 
                                                    t-att-data-package-id="package.id" 
                                                    t-att-data-billing-cycle="billing_cycle" 
                                                    t-att-data-is-free-trial="is_free_trial">
                                                Pay now
                                            </button>
                                        </t>
                                        
                                        <div class="text-center mt-2">
                                            <small class="text-muted">or</small>
                                        </div>
                                        <a href="/saas/packages" class="btn btn-link text-muted">
                                            <i class="fa fa-arrow-left me-1"></i>Back to packages
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Loading Screen -->
        <div id="saasLoadingScreen" class="saas_loading_screen" style="display: none;">
            <div class="saas_loading_content">
                <div class="saas_loading_spinner">
                    <div class="saas_spinner"></div>
                </div>
                <h4 class="saas_loading_title">Creating your SaaS instance...</h4>
                <p class="saas_loading_subtitle">Please wait while we set up your environment</p>
                <div class="saas_loading_progress">
                    <div class="saas_progress_bar">
                        <div class="saas_progress_fill"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success Screen -->
        <div id="saasSuccessScreen" class="saas_success_screen" style="display: none;">
            <div class="saas_success_content">
                <div class="saas_success_icon">
                    <i class="fa fa-check-circle"></i>
                </div>
                <h2 class="saas_success_title">All done!</h2>
                <div class="saas_success_checklist">
                    <div class="saas_checklist_item">
                        <i class="fa fa-check"></i>
                        <span>SaaS instance created</span>
                    </div>
                    <div class="saas_checklist_item">
                        <i class="fa fa-check"></i>
                        <span>Environment configured</span>
                    </div>
                    <div class="saas_checklist_item">
                        <i class="fa fa-check"></i>
                        <span>Ready to use</span>
                    </div>
                </div>
                <div class="saas_success_actions">
                    <button type="button" class="saas_continue_btn" id="saasContinueBtn">
                        Continue to Dashboard
                    </button>
                </div>
                
                <!-- Payment Link for Paid Packages -->
                <div id="saasPaymentLink" class="saas_payment_link" style="display: none;">
                    <p class="text-muted">Complete your payment to activate your subscription:</p>
                    <a href="#" id="saasInvoiceLink" class="saas_invoice_link">
                        <i class="fa fa-credit-card"></i>
                        Pay Invoice
                    </a>
                </div>
            </div>
        </div>
    </template>
</odoo>