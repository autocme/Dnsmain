<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase_error" name="SaaS Purchase Error">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="saas_error_container">
                                <div class="saas_error_icon">
                                    <i class="fa fa-exclamation-triangle"></i>
                                </div>
                                <h2 class="saas_error_title">Purchase Error</h2>
                                <p class="saas_error_message" t-esc="error_message"/>
                                <div class="saas_error_actions">
                                    <a href="/saas/packages" class="saas_error_btn">
                                        <i class="fa fa-arrow-left"></i>
                                        Back to Packages
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>