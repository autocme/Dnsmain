<record id="view_domain_form_aws_inherit" model="ir.ui.view">
    <field name="name">dns.domain.form.aws.inherit</field>
    <field name="model">dns.domain</field>
    <field name="inherit_id" ref="dns_base.view_domain_form"/>
    <field name="arch" type="xml">
        <notebook position="inside">
            <page string="AWS Route 53" name="route53">
                <group>
                    <group>
                        <field name="route53_sync"/>
                        <field name="aws_credentials_id" attrs="{'invisible': [('route53_sync', '=', False)], 'required': [('route53_sync', '=', True)]}"/>
                        <field name="route53_auto_region_sync" attrs="{'invisible': [('route53_sync', '=', False)]}"/>
                        <field name="route53_config_id" attrs="{'invisible': [('route53_sync', '=', False)], 'required': [('route53_sync', '=', True)]}"/>
                        <field name="route53_hosted_zone_id" attrs="{'invisible': [('route53_sync', '=', False)]}"/>
                    </group>
                    <group>
                        <field name="route53_sync_status" widget="badge"
                               decoration-success="route53_sync_status == 'synced'"
                               decoration-warning="route53_sync_status == 'not_synced'"
                               decoration-danger="route53_sync_status == 'error'"
                               attrs="{'invisible': [('route53_sync', '=', False)]}"/>
                        <field name="route53_last_sync" attrs="{'invisible': [('route53_sync', '=', False)]}"/>
                    </group>
                </group>

                <group attrs="{'invisible': [('route53_error_message', '=', False)]}">
                    <field name="route53_error_message" readonly="1" nolabel="1"/>
                </group>

                <div attrs="{'invisible': [('route53_sync', '=', False)]}">
                    <button name="sync_all_subdomains_to_route53" string="Sync All Subdomains to Route 53" type="object" class="oe_highlight" icon="fa-upload"/>
                    <button name="%(dns_aws.action_sync_domain_route53_records)d" string="Sync Records from Route 53" type="action" class="oe_highlight" icon="fa-download"/>
                </div>
            </page>
        </notebook>

        <xpath expr="//field[@name='subdomain_ids']/tree" position="inside">
            <field name="route53_sync" invisible="1"/>
            <field name="route53_sync_status" widget="badge"
                   decoration-success="route53_sync_status == 'synced'"
                   decoration-warning="route53_sync_status == 'not_synced'"
                   decoration-danger="route53_sync_status == 'error'"
                   optional="show"/>
            <field name="route53_last_sync" optional="hide"/>
            <field name="route53_error_message" invisible="1"/>
        </xpath>
    </field>
</record>
