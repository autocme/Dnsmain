<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_boto" model="ir.module.category">
        <field name="name">AWS Integration</field>
        <field name="description">Manage AWS API integrations</field>
        <field name="sequence">50</field>
    </record>

    <record id="group_aws_user" model="res.groups">
        <field name="name">AWS User</field>
        <field name="category_id" ref="module_category_boto"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_aws_manager" model="res.groups">
        <field name="name">AWS Manager</field>
        <field name="category_id" ref="module_category_boto"/>
        <field name="implied_ids" eval="[(4, ref('group_aws_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- Rules -->
    <record id="aws_credentials_user_rule" model="ir.rule">
        <field name="name">AWS Credentials User Access</field>
        <field name="model_id" ref="model_aws_credentials"/>
        <field name="groups" eval="[(4, ref('group_aws_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">[('active', '=', True)]</field>
    </record>

    <record id="aws_credentials_manager_rule" model="ir.rule">
        <field name="name">AWS Credentials Manager Access</field>
        <field name="model_id" ref="model_aws_credentials"/>
        <field name="groups" eval="[(4, ref('group_aws_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>