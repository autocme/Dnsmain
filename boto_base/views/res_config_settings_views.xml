<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AWS Integration Settings -->
    <record id="res_config_settings_view_form_aws" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.aws</field>
        <field name="model">res.config.settings</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="AWS Integration" string="AWS Integration" name="boto_base" groups="boto_base.group_aws_manager">
                    <block title="AWS Credentials" name="aws_credentials_block">
                        <setting id="aws_credentials" string="AWS Account" company_dependent="1" help="Manage AWS credentials for service integrations">
                            <field name="aws_manage_credentials"/>
                            <div class="content-group" attrs="{'invisible': [('aws_manage_credentials', '=', False)]}">
                                <div class="row mt16">
                                    <label for="aws_default_region" class="col-lg-3 o_light_label"/>
                                    <field name="aws_default_region" placeholder="e.g. us-east-1"/>
                                </div>
                                <div class="row mt16">
                                    <label for="aws_credentials_count" class="col-lg-3 o_light_label"/>
                                    <field name="aws_credentials_count" readonly="1"/>
                                    <button name="action_aws_credentials" 
                                            type="object" 
                                            string="Manage Credentials" 
                                            class="btn-link" 
                                            icon="oi-arrow-right"/>
                                </div>
                                <div class="row mt16" attrs="{'invisible': [('aws_default_credentials_id', '=', False)]}">
                                    <label for="aws_default_credentials_id" class="col-lg-3 o_light_label"/>
                                    <field name="aws_default_credentials_id" readonly="1"/>
                                    <button name="test_aws_connectivity" 
                                            type="object" 
                                            string="Test Connection" 
                                            class="btn-link" 
                                            icon="fa-check"/>
                                </div>
                                <div class="mt16">
                                    <button name="action_create_aws_credentials" 
                                            type="object" 
                                            string="Add New Credentials" 
                                            class="btn-primary"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>