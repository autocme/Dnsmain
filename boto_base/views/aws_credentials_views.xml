<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AWS Credentials Tree View -->
    <record id="view_aws_credentials_tree" model="ir.ui.view">
        <field name="name">aws.credentials.tree</field>
        <field name="model">aws.credentials</field>
        <field name="arch" type="xml">
            <tree string="AWS Credentials">
                <field name="name"/>
                <field name="aws_default_region"/>
                <field name="is_default"/>
                <field name="is_valid" widget="boolean_toggle"/>
                <field name="last_validation"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- AWS Credentials Form View -->
    <record id="view_aws_credentials_form" model="ir.ui.view">
        <field name="name">aws.credentials.form</field>
        <field name="model">aws.credentials</field>
        <field name="arch" type="xml">
            <form string="AWS Credentials">
                <header>
                    <button name="test_credentials" string="Test Connection" type="object" 
                            class="oe_highlight" icon="fa-check"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Production AWS Account"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="aws_access_key_id" password="True"/>
                            <field name="aws_secret_access_key" password="True"/>
                            <field name="aws_session_token" password="True" 
                                   placeholder="Optional, for temporary credentials"/>
                        </group>
                        <group>
                            <field name="aws_default_region"/>
                            <field name="is_default"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Enter any notes about these credentials..."/>
                        </page>
                        <page string="Validation" name="validation">
                            <group>
                                <field name="is_valid" readonly="1"/>
                                <field name="last_validation" readonly="1"/>
                                <field name="validation_message" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AWS Credentials Search View -->
    <record id="view_aws_credentials_search" model="ir.ui.view">
        <field name="name">aws.credentials.search</field>
        <field name="model">aws.credentials</field>
        <field name="arch" type="xml">
            <search string="AWS Credentials">
                <field name="name"/>
                <field name="aws_default_region"/>
                <filter string="Default" name="default" domain="[('is_default', '=', True)]"/>
                <filter string="Valid" name="valid" domain="[('is_valid', '=', True)]"/>
                <filter string="Invalid" name="invalid" domain="[('is_valid', '=', False)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Region" name="region" domain="[]" context="{'group_by': 'aws_default_region'}"/>
                    <filter string="Validation Status" name="status" domain="[]" context="{'group_by': 'is_valid'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- AWS Credentials Action -->
    <record id="action_aws_credentials" model="ir.actions.act_window">
        <field name="name">AWS Credentials</field>
        <field name="res_model">aws.credentials</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_aws_credentials_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first AWS credentials!
            </p>
            <p>
                Configure AWS credentials to enable AWS service integrations.
            </p>
        </field>
    </record>
</odoo>