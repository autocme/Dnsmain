<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- GitHub Sync Log Tree View -->
    <record id="view_github_sync_log_tree" model="ir.ui.view">
        <field name="name">github.sync.log.tree</field>
        <field name="model">github.sync.log</field>
        <field name="arch" type="xml">
            <tree string="Operation Logs" default_order="gsl_timestamp desc">
                <field name="gsl_timestamp" string="Time"/>
                <field name="gsl_operation_type" string="Operation"/>
                <field name="gsl_status" string="Status"/>
                <field name="gsl_message" string="Message"/>
                <field name="gsl_repository"/>
                <field name="gsl_server_id"/>
            </tree>
        </field>
    </record>

    <!-- GitHub Sync Log Form View -->
    <record id="view_github_sync_log_form" model="ir.ui.view">
        <field name="name">github.sync.log.form</field>
        <field name="model">github.sync.log</field>
        <field name="arch" type="xml">
            <form string="GitHub Sync Log" create="false" edit="false">
                <sheet>
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="gsl_external_id"/>
                            <field name="gsl_server_id"/>
                            <field name="gsl_timestamp"/>
                            <field name="gsl_repository"/>
                        </group>
                        <group name="log_info" string="Log Information">
                            <field name="gsl_level"/>
                            <field name="gsl_status"/>
                            <field name="gsl_operation_type"/>
                            <field name="gsl_operation"/>
                        </group>
                    </group>
                    <group name="message_info" string="Message">
                        <field name="gsl_message" nolabel="1"/>
                    </group>
                    <group name="details_info" string="Details">
                        <field name="gsl_details" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- GitHub Sync Log Search View -->
    <record id="view_github_sync_log_search" model="ir.ui.view">
        <field name="name">github.sync.log.search</field>
        <field name="model">github.sync.log</field>
        <field name="arch" type="xml">
            <search string="Search GitHub Sync Logs">
                <field name="gsl_server_id"/>
                <field name="gsl_level"/>
                <field name="gsl_status"/>
                <field name="gsl_operation_type"/>
                <field name="gsl_operation"/>
                <field name="gsl_repository"/>
                <field name="gsl_message"/>
                
                <!-- Operation Type Filters -->
                <filter string="All Operations" name="filter_all_operations" domain="[]"/>
                <filter string="Pull" name="filter_pull" domain="[('gsl_operation_type', '=', 'pull')]"/>
                <filter string="Clone" name="filter_clone" domain="[('gsl_operation_type', '=', 'clone')]"/>
                <filter string="Restart" name="filter_restart" domain="[('gsl_operation_type', '=', 'restart')]"/>
                <filter string="Webhook" name="filter_webhook" domain="[('gsl_operation_type', '=', 'webhook')]"/>
                
                <!-- Status Filters -->
                <filter string="All Status" name="filter_all_status" domain="[]"/>
                <filter string="Success" name="filter_success" domain="[('gsl_status', '=', 'success')]"/>
                <filter string="Error" name="filter_error" domain="[('gsl_status', '=', 'error')]"/>
                <filter string="Warning" name="filter_warning" domain="[('gsl_status', '=', 'warning')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Server" name="group_server" context="{'group_by': 'gsl_server_id'}"/>
                    <filter string="Operation Type" name="group_operation_type" context="{'group_by': 'gsl_operation_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'gsl_status'}"/>
                    <filter string="Repository" name="group_repository" context="{'group_by': 'gsl_repository'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- GitHub Sync Log Action -->
    <record id="action_github_sync_log" model="ir.actions.act_window">
        <field name="name">Operation Logs</field>
        <field name="res_model">github.sync.log</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_github_sync_log_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No logs found!
            </p>
            <p>
                Logs will appear here after synchronization from GitHub Sync Servers.
                Configure a GitHub Sync Server and run log synchronization to see entries.
            </p>
        </field>
    </record>

</odoo>