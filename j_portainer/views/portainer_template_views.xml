<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Portainer Template Form View -->
    <record id="view_portainer_template_form" model="ir.ui.view">
        <field name="name">j_portainer.template.form</field>
        <field name="model">j_portainer.template</field>
        <field name="arch" type="xml">
            <form string="Template">
                <header>
                    <button name="action_deploy" string="Deploy Container" type="object" 
                            class="btn-primary"/>
                    <button name="action_refresh" string="Refresh" type="object" 
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="title" class="oe_edit_only"/>
                        <h1><field name="title"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="server_id" readonly="1"/>
                            <field name="template_id" readonly="1"/>
                            <field name="is_custom" readonly="1"/>
                            <field name="template_type" readonly="1"/>
                        </group>
                        <group>
                            <field name="image" readonly="1"/>
                            <field name="platform" readonly="1"/>
                            <field name="category_ids" readonly="1" widget="many2many_tags"/>
                            <field name="categories" invisible="1"/>
                            <field name="registry" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="description" readonly="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Environment Variables" name="env_vars">
                            <field name="environment_variables" widget="html" readonly="1"/>
                        </page>
                        
                        <page string="Ports" name="ports">
                            <field name="ports" widget="html" readonly="1"/>
                        </page>
                        
                        <page string="Volumes" name="volumes">
                            <field name="volumes" widget="html" readonly="1"/>
                        </page>
                        
                        <page string="Details" name="details">
                            <field name="details" widget="html" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Portainer Template Tree View -->
    <record id="view_portainer_template_tree" model="ir.ui.view">
        <field name="name">j_portainer.template.tree</field>
        <field name="model">j_portainer.template</field>
        <field name="arch" type="xml">
            <tree string="Templates">
                <field name="title"/>
                <field name="image"/>
                <field name="platform"/>
                <field name="template_type"/>
                <field name="is_custom"/>
                <field name="server_id"/>
                <field name="category_ids" widget="many2many_tags"/>
                <field name="categories" invisible="1"/>
                <button name="action_deploy" string="Deploy" type="object" 
                        icon="fa-rocket"/>
            </tree>
        </field>
    </record>
    
    <!-- Portainer Template Search View -->
    <record id="view_portainer_template_search" model="ir.ui.view">
        <field name="name">j_portainer.template.search</field>
        <field name="model">j_portainer.template</field>
        <field name="arch" type="xml">
            <search string="Search Templates">
                <field name="title"/>
                <field name="image"/>
                <field name="server_id"/>
                <field name="category_ids"/>
                <field name="categories" invisible="1"/>
                <separator/>
                <filter string="Custom Templates" name="custom" domain="[('is_custom', '=', True)]"/>
                <filter string="Official Templates" name="official" domain="[('is_custom', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Server" name="group_by_server" domain="[]" context="{'group_by': 'server_id'}"/>
                    <filter string="Type" name="group_by_type" domain="[]" context="{'group_by': 'template_type'}"/>
                    <filter string="Platform" name="group_by_platform" domain="[]" context="{'group_by': 'platform'}"/>
                    <filter string="Is Custom" name="group_by_custom" domain="[]" context="{'group_by': 'is_custom'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Portainer Template Action -->
    <record id="action_portainer_template" model="ir.actions.act_window">
        <field name="name">Templates</field>
        <field name="res_model">j_portainer.template</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_portainer_template_search"/>
        <field name="domain">[('is_custom', '=', False)]</field>
        <field name="context">{'search_default_group_by_server': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No templates found
            </p>
            <p>
                Sync your Portainer server to fetch templates.
            </p>
        </field>
    </record>
    
    <!-- Custom Portainer Template Action -->
    <record id="action_portainer_custom_template" model="ir.actions.act_window">
        <field name="name">Custom Templates</field>
        <field name="res_model">j_portainer.template</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_portainer_template_search"/>
        <field name="domain">[('is_custom', '=', True)]</field>
        <field name="context">{'search_default_group_by_server': 1, 'default_is_custom': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No custom templates found
            </p>
            <p>
                Create a new custom template to deploy containers with predefined settings.
            </p>
        </field>
    </record>
    
    <!-- Custom Portainer Template Form View -->
    <record id="view_portainer_custom_template_form" model="ir.ui.view">
        <field name="name">j_portainer.template.custom.form</field>
        <field name="model">j_portainer.template</field>
        <field name="arch" type="xml">
            <form string="Custom Template">
                <sheet>
                    <div class="oe_title">
                        <label for="title" class="oe_edit_only"/>
                        <h1><field name="title" placeholder="Give the template a descriptive name"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="server_id" options="{'no_create': True, 'no_open': True}" required="1"/>
                            <field name="description" placeholder="Enter a brief description of what your template includes"/>
                            <field name="note" placeholder="Note any extra information about the template (optional)"/>
                            <field name="is_custom" invisible="1"/>
                        </group>
                        <group>
                            <field name="platform"/>
                            <field name="template_type" string="Type"/>
                            <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': False}"/>
                            <field name="build_method" widget="radio"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Web Editor" name="web_editor" invisible="build_method != 'editor'">
                            <field name="compose_file" placeholder="Paste the contents of your docker-compose file here..." widget="ace" options="{'mode': 'yaml'}" required="build_method == 'editor'"/>
                        </page>
                        
                        <page string="Git Repository" name="git_repository" invisible="build_method != 'repository'">
                            <group>
                                <group>
                                    <field name="git_repository_url" placeholder="https://github.com/username/repository.git" required="build_method == 'repository'"/>
                                    <field name="git_repository_reference" placeholder="master" required="build_method == 'repository'"/>
                                    <field name="git_compose_path" placeholder="docker-compose.yml" required="build_method == 'repository'"/>
                                    <field name="git_skip_tls"/>
                                </group>
                                <group>
                                    <field name="git_authentication"/>
                                    <field name="git_credentials_id" 
                                           invisible="git_authentication == False"
                                           required="git_authentication == True and git_username == False"
                                           domain="[('server_id', '=', server_id)]"
                                           options="{'no_create': True}"/>
                                    <field name="git_username" 
                                           invisible="git_authentication == False"
                                           required="git_authentication == True and git_credentials_id == False"/>
                                    <field name="git_token" password="True" 
                                           invisible="git_authentication == False"
                                           required="git_authentication == True and git_credentials_id == False"/>
                                    <field name="git_save_credential" 
                                           invisible="git_authentication == False or git_credentials_id != False"/>
                                    <field name="git_credential_name" 
                                           invisible="git_authentication == False or git_save_credential == False or git_credentials_id != False"
                                           required="git_save_credential == True and git_credentials_id == False"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Git Credentials Form View -->
    <record id="view_portainer_git_credentials_form" model="ir.ui.view">
        <field name="name">j_portainer.git.credentials.form</field>
        <field name="model">j_portainer.git.credentials</field>
        <field name="arch" type="xml">
            <form string="Git Credentials">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="server_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="username"/>
                        <field name="token" password="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Git Credentials Tree View -->
    <record id="view_portainer_git_credentials_tree" model="ir.ui.view">
        <field name="name">j_portainer.git.credentials.tree</field>
        <field name="model">j_portainer.git.credentials</field>
        <field name="arch" type="xml">
            <tree string="Git Credentials">
                <field name="name"/>
                <field name="username"/>
                <field name="server_id"/>
            </tree>
        </field>
    </record>
    
    <!-- Git Credentials Action -->
    <record id="action_portainer_git_credentials" model="ir.actions.act_window">
        <field name="name">Git Credentials</field>
        <field name="res_model">j_portainer.git.credentials</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Git credentials found
            </p>
            <p>
                Create Git credentials to access private repositories.
            </p>
        </field>
    </record>
    
</odoo>