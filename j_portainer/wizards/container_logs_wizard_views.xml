<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Container Logs Wizard Form View -->
    <record id="view_container_logs_wizard_form" model="ir.ui.view">
        <field name="name">j_portainer.container.logs.wizard.form</field>
        <field name="model">j_portainer.container.logs.wizard</field>
        <field name="arch" type="xml">
            <form string="Container Logs">
                <sheet>
                    <div class="oe_title">
                        <h1>Logs: <field name="name" readonly="1" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <field name="container_id" invisible="1"/>
                        <field name="server_id" readonly="1"/>
                        <field name="environment_id" invisible="1"/>
                        <field name="lines"/>
                    </group>
                    <div class="row">
                        <div class="col-12">
                            <button name="action_refresh_logs" string="Refresh Logs" type="object" 
                                    class="btn btn-primary" icon="fa-refresh"/>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <field name="logs" widget="ace" readonly="1" style="min-height: 400px;"/>
                        </div>
                    </div>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>