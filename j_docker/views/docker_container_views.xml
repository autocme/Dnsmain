<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Container Tree View -->
    <record id="view_docker_container_tree" model="ir.ui.view">
        <field name="name">j_docker.docker_container.tree</field>
        <field name="model">j_docker.docker_container</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'running'" decoration-warning="state == 'paused'" 
                  decoration-danger="state == 'exited' or state == 'dead'" decoration-muted="state == 'created'">
                <field name="server_id"/>
                <field name="name"/>
                <field name="container_id"/>
                <field name="image"/>
                <field name="state"/>
                <field name="status"/>
                <field name="created"/>
                <button name="start" string="Start" type="object" icon="fa-play" 
                        attrs="{'invisible': [('state', 'in', ['running', 'paused'])]}"/>
                <button name="stop" string="Stop" type="object" icon="fa-stop" 
                        attrs="{'invisible': [('state', 'not in', ['running', 'paused'])]}"/>
                <button name="restart" string="Restart" type="object" icon="fa-refresh" 
                        attrs="{'invisible': [('state', 'not in', ['running', 'paused'])]}"/>
                <button name="inspect" string="Inspect" type="object" icon="fa-info-circle"/>
                <button name="get_logs" string="Logs" type="object" icon="fa-file-text-o"/>
            </tree>
        </field>
    </record>
    
    <!-- Container Form View -->
    <record id="view_docker_container_form" model="ir.ui.view">
        <field name="name">j_docker.docker_container.form</field>
        <field name="model">j_docker.docker_container</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="start" string="Start" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', 'in', ['running', 'paused'])]}"/>
                    <button name="stop" string="Stop" type="object" class="btn-danger"
                            attrs="{'invisible': [('state', 'not in', ['running', 'paused'])]}"/>
                    <button name="restart" string="Restart" type="object" 
                            attrs="{'invisible': [('state', 'not in', ['running', 'paused'])]}"/>
                    <button name="remove" string="Remove" type="object" class="btn-danger"
                            confirm="Are you sure you want to remove this container? This operation cannot be undone."/>
                    <button name="get_logs" string="View Logs" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="running,stopped,exited,paused,created"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Container Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="server_id" options="{'no_create': True}"/>
                            <field name="container_id"/>
                            <field name="image"/>
                            <field name="image_id"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="created"/>
                            <field name="ports"/>
                            <field name="command"/>
                        </group>
                    </group>
                    <button name="inspect" string="Inspect Container" type="object" class="oe_highlight"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Container Search View -->
    <record id="view_docker_container_search" model="ir.ui.view">
        <field name="name">j_docker.docker_container.search</field>
        <field name="model">j_docker.docker_container</field>
        <field name="arch" type="xml">
            <search string="Docker Containers">
                <field name="name"/>
                <field name="server_id"/>
                <field name="container_id"/>
                <field name="image"/>
                <field name="state"/>
                <filter string="Running" name="running" domain="[('state', '=', 'running')]"/>
                <filter string="Stopped" name="stopped" domain="[('state', 'in', ['stopped', 'exited'])]"/>
                <filter string="Paused" name="paused" domain="[('state', '=', 'paused')]"/>
                <group expand="0" string="Group By">
                    <filter string="Server" name="group_by_server" domain="[]" context="{'group_by': 'server_id'}"/>
                    <filter string="State" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Image" name="group_by_image" domain="[]" context="{'group_by': 'image'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Container Action Window -->
    <record id="action_docker_container" model="ir.actions.act_window">
        <field name="name">Docker Containers</field>
        <field name="res_model">j_docker.docker_container</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_docker_container_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No containers found!
            </p>
            <p>
                Connect to a Docker server and refresh containers to see them here.
            </p>
        </field>
    </record>
</odoo>