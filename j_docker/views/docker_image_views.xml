<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Image Tree View -->
    <record id="view_docker_image_tree" model="ir.ui.view">
        <field name="name">j_docker.docker_image.tree</field>
        <field name="model">j_docker.docker_image</field>
        <field name="arch" type="xml">
            <tree>
                <field name="server_id"/>
                <field name="repository"/>
                <field name="tag"/>
                <field name="image_id"/>
                <field name="created"/>
                <field name="size"/>
                <button name="pull" string="Pull" type="object" icon="fa-cloud-download" 
                        attrs="{'invisible': [('repository', '=', False)]}"/>
                <button name="remove" string="Remove" type="object" icon="fa-trash" 
                        confirm="Are you sure you want to remove this image?"/>
                <button name="inspect" string="Inspect" type="object" icon="fa-info-circle"/>
            </tree>
        </field>
    </record>
    
    <!-- Image Form View -->
    <record id="view_docker_image_form" model="ir.ui.view">
        <field name="name">j_docker.docker_image.form</field>
        <field name="model">j_docker.docker_image</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="pull" string="Pull Update" type="object" class="oe_highlight" 
                            attrs="{'invisible': [('repository', '=', False)]}"/>
                    <button name="remove" string="Remove" type="object" class="btn-danger"
                            confirm="Are you sure you want to remove this image? This operation cannot be undone."/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="repository" class="oe_inline" placeholder="Repository"/>:<field name="tag" class="oe_inline" placeholder="Tag"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="server_id" options="{'no_create': True}"/>
                            <field name="image_id"/>
                        </group>
                        <group>
                            <field name="created"/>
                            <field name="size"/>
                        </group>
                    </group>
                    <button name="inspect" string="Inspect Image" type="object" class="oe_highlight"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Image Search View -->
    <record id="view_docker_image_search" model="ir.ui.view">
        <field name="name">j_docker.docker_image.search</field>
        <field name="model">j_docker.docker_image</field>
        <field name="arch" type="xml">
            <search string="Docker Images">
                <field name="repository"/>
                <field name="tag"/>
                <field name="server_id"/>
                <field name="image_id"/>
                <group expand="0" string="Group By">
                    <filter string="Server" name="group_by_server" domain="[]" context="{'group_by': 'server_id'}"/>
                    <filter string="Repository" name="group_by_repository" domain="[]" context="{'group_by': 'repository'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Image Action Window -->
    <record id="action_docker_image" model="ir.actions.act_window">
        <field name="name">Docker Images</field>
        <field name="res_model">j_docker.docker_image</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_docker_image_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No images found!
            </p>
            <p>
                Connect to a Docker server and refresh images to see them here.
            </p>
        </field>
    </record>
</odoo>