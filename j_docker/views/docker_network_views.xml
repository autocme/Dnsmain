<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Network Tree View -->
    <record id="view_docker_network_tree" model="ir.ui.view">
        <field name="name">j_docker.docker_network.tree</field>
        <field name="model">j_docker.docker_network</field>
        <field name="arch" type="xml">
            <tree>
                <field name="server_id"/>
                <field name="name"/>
                <field name="network_id"/>
                <field name="driver"/>
                <field name="scope"/>
                <field name="created"/>
                <button name="remove" string="Remove" type="object" icon="fa-trash" 
                        confirm="Are you sure you want to remove this network?"/>
                <button name="inspect" string="Inspect" type="object" icon="fa-info-circle"/>
            </tree>
        </field>
    </record>
    
    <!-- Network Form View -->
    <record id="view_docker_network_form" model="ir.ui.view">
        <field name="name">j_docker.docker_network.form</field>
        <field name="model">j_docker.docker_network</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="remove" string="Remove" type="object" class="btn-danger"
                            confirm="Are you sure you want to remove this network? This operation cannot be undone."/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Network Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="server_id" options="{'no_create': True}"/>
                            <field name="network_id"/>
                            <field name="driver"/>
                        </group>
                        <group>
                            <field name="scope"/>
                            <field name="created"/>
                        </group>
                    </group>
                    <button name="inspect" string="Inspect Network" type="object" class="oe_highlight"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Network Search View -->
    <record id="view_docker_network_search" model="ir.ui.view">
        <field name="name">j_docker.docker_network.search</field>
        <field name="model">j_docker.docker_network</field>
        <field name="arch" type="xml">
            <search string="Docker Networks">
                <field name="name"/>
                <field name="server_id"/>
                <field name="network_id"/>
                <field name="driver"/>
                <field name="scope"/>
                <group expand="0" string="Group By">
                    <filter string="Server" name="group_by_server" domain="[]" context="{'group_by': 'server_id'}"/>
                    <filter string="Driver" name="group_by_driver" domain="[]" context="{'group_by': 'driver'}"/>
                    <filter string="Scope" name="group_by_scope" domain="[]" context="{'group_by': 'scope'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Network Action Window -->
    <record id="action_docker_network" model="ir.actions.act_window">
        <field name="name">Docker Networks</field>
        <field name="res_model">j_docker.docker_network</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_docker_network_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No networks found!
            </p>
            <p>
                Connect to a Docker server and refresh networks to see them here.
            </p>
        </field>
    </record>
</odoo>