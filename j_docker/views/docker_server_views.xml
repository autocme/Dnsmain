<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Server Tree View -->
    <record id="view_docker_server_tree" model="ir.ui.view">
        <field name="name">j_docker.docker_server.tree</field>
        <field name="model">j_docker.docker_server</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'connected'" decoration-danger="status == 'error'" decoration-warning="status == 'connecting'" decoration-muted="status == 'unknown'">
                <field name="name"/>
                <field name="host"/>
                <field name="status"/>
                <field name="docker_version"/>
                <field name="docker_api_version"/>
                <field name="container_count"/>
                <field name="container_running"/>
                <field name="image_count"/>
                <field name="last_check"/>
            </tree>
        </field>
    </record>
    
    <!-- Server Form View -->
    <record id="view_docker_server_form" model="ir.ui.view">
        <field name="name">j_docker.docker_server.form</field>
        <field name="model">j_docker.docker_server</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="test_connection" string="Test Connection" type="object" class="oe_highlight"/>
                    <button name="refresh_containers" string="Refresh Containers" type="object"/>
                    <button name="refresh_images" string="Refresh Images" type="object"/>
                    <button name="refresh_volumes" string="Refresh Volumes" type="object"/>
                    <button name="refresh_networks" string="Refresh Networks" type="object"/>
                    <button name="refresh_all" string="Refresh All" type="object" class="oe_highlight"/>
                    <button name="prune_all" string="Prune All" type="object" class="btn-danger" 
                            confirm="This will remove all unused containers, images, volumes, and networks. This operation cannot be undone. Are you sure?"/>
                    <field name="status" widget="statusbar" statusbar_visible="unknown,connecting,connected,error"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Docker Server Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="host" placeholder="hostname or IP address"/>
                            <field name="port"/>
                            <field name="username"/>
                            <field name="auth_method" widget="radio"/>
                            <field name="password" password="True" attrs="{'invisible': [('auth_method', '!=', 'password')], 'required': [('auth_method', '=', 'password')]}"/>
                            <field name="private_key" attrs="{'invisible': [('auth_method', '!=', 'key')], 'required': [('auth_method', '=', 'key')]}" 
                                   widget="ace" options="{'mode': 'text'}" placeholder="Paste your private key here"/>
                            <field name="private_key_password" password="True" attrs="{'invisible': [('auth_method', '!=', 'key')]}"/>
                        </group>
                        <group>
                            <field name="docker_socket"/>
                            <field name="use_sudo"/>
                            <field name="last_check"/>
                            <field name="error_message" attrs="{'invisible': [('status', '!=', 'error')]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Docker Info" name="docker_info">
                            <group>
                                <group string="Docker Engine">
                                    <field name="docker_version"/>
                                    <field name="docker_api_version"/>
                                    <field name="docker_os"/>
                                    <field name="docker_arch"/>
                                    <field name="docker_kernel"/>
                                </group>
                                <group string="Resources">
                                    <field name="container_count"/>
                                    <field name="container_running"/>
                                    <field name="container_paused"/>
                                    <field name="container_stopped"/>
                                    <field name="image_count"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Containers" name="containers">
                            <field name="container_ids" context="{'default_server_id': active_id}">
                                <tree editable="bottom" decoration-success="state == 'running'" 
                                      decoration-warning="state == 'paused'" decoration-danger="state == 'exited' or state == 'dead'">
                                    <field name="name"/>
                                    <field name="container_id"/>
                                    <field name="image"/>
                                    <field name="state"/>
                                    <field name="status"/>
                                    <field name="created"/>
                                    <field name="command"/>
                                    <button name="start" string="Start" type="object" icon="fa-play" 
                                            attrs="{'invisible': [('state', 'in', ['running', 'paused'])]}"/>
                                    <button name="stop" string="Stop" type="object" icon="fa-stop" 
                                            attrs="{'invisible': [('state', 'not in', ['running', 'paused'])]}"/>
                                    <button name="restart" string="Restart" type="object" icon="fa-refresh" 
                                            attrs="{'invisible': [('state', 'not in', ['running', 'paused'])]}"/>
                                    <button name="remove" string="Remove" type="object" icon="fa-trash" 
                                            confirm="Are you sure you want to remove this container?"/>
                                    <button name="inspect" string="Inspect" type="object" icon="fa-info-circle"/>
                                    <button name="get_logs" string="Logs" type="object" icon="fa-file-text-o"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Images" name="images">
                            <field name="image_ids" context="{'default_server_id': active_id}">
                                <tree editable="bottom">
                                    <field name="repository"/>
                                    <field name="tag"/>
                                    <field name="image_id"/>
                                    <field name="created"/>
                                    <field name="size"/>
                                    <button name="pull" string="Pull" type="object" icon="fa-cloud-download" 
                                            attrs="{'invisible': [('repository', '=', False)]}"/>
                                    <button name="remove" string="Remove" type="object" icon="fa-trash" 
                                            confirm="Are you sure you want to remove this image?"/>
                                    <button name="inspect" string="Inspect" type="object" icon="fa-info-circle"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Volumes" name="volumes">
                            <field name="volume_ids" context="{'default_server_id': active_id}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="driver"/>
                                    <field name="mountpoint"/>
                                    <field name="created"/>
                                    <button name="remove" string="Remove" type="object" icon="fa-trash" 
                                            confirm="Are you sure you want to remove this volume?"/>
                                    <button name="inspect" string="Inspect" type="object" icon="fa-info-circle"/>
                                </tree>
                            </field>
                            <!-- Volume management buttons are in the volume model -->
                        </page>
                        
                        <page string="Networks" name="networks">
                            <field name="network_ids" context="{'default_server_id': active_id}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="network_id"/>
                                    <field name="driver"/>
                                    <field name="scope"/>
                                    <field name="created"/>
                                    <button name="remove" string="Remove" type="object" icon="fa-trash" 
                                            confirm="Are you sure you want to remove this network?"/>
                                    <button name="inspect" string="Inspect" type="object" icon="fa-info-circle"/>
                                </tree>
                            </field>
                            <!-- Network management buttons are in the network model -->
                        </page>
                        
                        <page string="API Version Info" name="api_version_info">
                            <field name="api_version_info_html" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Server Search View -->
    <record id="view_docker_server_search" model="ir.ui.view">
        <field name="name">j_docker.docker_server.search</field>
        <field name="model">j_docker.docker_server</field>
        <field name="arch" type="xml">
            <search string="Docker Servers">
                <field name="name"/>
                <field name="host"/>
                <field name="username"/>
                <field name="docker_version"/>
                <filter string="Connected" name="connected" domain="[('status', '=', 'connected')]"/>
                <filter string="Error" name="error" domain="[('status', '=', 'error')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Docker Version" name="group_by_version" domain="[]" context="{'group_by': 'docker_version'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Server Action Window -->
    <record id="action_docker_server" model="ir.actions.act_window">
        <field name="name">Docker Servers</field>
        <field name="res_model">j_docker.docker_server</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_docker_server_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Docker server connection!
            </p>
            <p>
                Add a new Docker server connection to manage containers, images, volumes, and networks.
            </p>
        </field>
    </record>
</odoo>