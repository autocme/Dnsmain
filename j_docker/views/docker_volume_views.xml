<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Volume Tree View -->
    <record id="view_docker_volume_tree" model="ir.ui.view">
        <field name="name">j_docker.docker_volume.tree</field>
        <field name="model">j_docker.docker_volume</field>
        <field name="arch" type="xml">
            <tree>
                <field name="server_id"/>
                <field name="name"/>
                <field name="driver"/>
                <field name="mountpoint"/>
                <field name="created"/>
                <button name="remove" string="Remove" type="object" icon="fa-trash" 
                        confirm="Are you sure you want to remove this volume?"/>
                <button name="inspect" string="Inspect" type="object" icon="fa-info-circle"/>
            </tree>
        </field>
    </record>
    
    <!-- Volume Form View -->
    <record id="view_docker_volume_form" model="ir.ui.view">
        <field name="name">j_docker.docker_volume.form</field>
        <field name="model">j_docker.docker_volume</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="remove" string="Remove" type="object" class="btn-danger"
                            confirm="Are you sure you want to remove this volume? This operation cannot be undone."/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Volume Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="server_id" options="{'no_create': True}"/>
                            <field name="driver"/>
                        </group>
                        <group>
                            <field name="mountpoint"/>
                            <field name="created"/>
                        </group>
                    </group>
                    <button name="inspect" string="Inspect Volume" type="object" class="oe_highlight"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Volume Search View -->
    <record id="view_docker_volume_search" model="ir.ui.view">
        <field name="name">j_docker.docker_volume.search</field>
        <field name="model">j_docker.docker_volume</field>
        <field name="arch" type="xml">
            <search string="Docker Volumes">
                <field name="name"/>
                <field name="server_id"/>
                <field name="driver"/>
                <group expand="0" string="Group By">
                    <filter string="Server" name="group_by_server" domain="[]" context="{'group_by': 'server_id'}"/>
                    <filter string="Driver" name="group_by_driver" domain="[]" context="{'group_by': 'driver'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Volume Action Window -->
    <record id="action_docker_volume" model="ir.actions.act_window">
        <field name="name">Docker Volumes</field>
        <field name="res_model">j_docker.docker_volume</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_docker_volume_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No volumes found!
            </p>
            <p>
                Connect to a Docker server and refresh volumes to see them here.
            </p>
        </field>
    </record>
</odoo>