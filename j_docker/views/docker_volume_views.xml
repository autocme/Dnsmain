<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_docker_volume_tree" model="ir.ui.view">
        <field name="name">docker.volume.tree</field>
        <field name="model">docker.volume</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="driver"/>
                <field name="mountpoint"/>
                <field name="scope"/>
                <field name="used_by_container_count"/>
                <field name="size"/>
                <field name="server_id"/>
                <field name="last_updated"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_docker_volume_form" model="ir.ui.view">
        <field name="name">docker.volume.form</field>
        <field name="model">docker.volume</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_remove" string="Remove" type="object" 
                            class="btn-danger" 
                            confirm="Are you sure you want to remove this volume?"
                            invisible="used_by_container_count > 0"/>
                    <button name="action_inspect" string="Inspect" type="object" class="btn-secondary"/>
                    <button name="action_create_container" string="Create Container" type="object" class="btn-success"/>
                    <button name="action_browse_volume" string="Browse Contents" type="object" class="btn-primary"/>
                    <button name="action_refresh" string="Refresh" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Volume Name"/>
                        </h1>
                        <div class="o_row">
                            <field name="driver" class="oe_inline" readonly="1"/> driver
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="server_id" options="{'no_create': True, 'no_open': False}"/>
                            <field name="mountpoint"/>
                            <field name="scope"/>
                            <field name="size"/>
                        </group>
                        <group>
                            <field name="used_by_container_count"/>
                            <field name="last_updated"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Used By Containers" name="containers">
                            <field name="used_by_containers" widget="ace" options="{'mode': 'text'}" placeholder="No containers using this volume"/>
                        </page>
                        <page string="Options" name="options">
                            <field name="options" widget="ace" options="{'mode': 'text'}" placeholder="No options"/>
                        </page>
                        <page string="Labels" name="labels">
                            <field name="labels" widget="ace" options="{'mode': 'text'}" placeholder="No labels"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add your notes here..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_docker_volume_search" model="ir.ui.view">
        <field name="name">docker.volume.search</field>
        <field name="model">docker.volume</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="driver"/>
                <field name="mountpoint"/>
                <field name="server_id"/>
                <separator/>
                <filter string="Local Driver" name="local_driver" domain="[('driver', '=', 'local')]"/>
                <filter string="NFS Driver" name="nfs_driver" domain="[('driver', '=', 'nfs')]"/>
                <separator/>
                <filter string="Local Scope" name="local_scope" domain="[('scope', '=', 'local')]"/>
                <filter string="Global Scope" name="global_scope" domain="[('scope', '=', 'global')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Driver" name="group_by_driver" context="{'group_by': 'driver'}"/>
                    <filter string="Server" name="group_by_server" context="{'group_by': 'server_id'}"/>
                    <filter string="Scope" name="group_by_scope" context="{'group_by': 'scope'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Kanban View -->
    <record id="view_docker_volume_kanban" model="ir.ui.view">
        <field name="name">docker.volume.kanban</field>
        <field name="model">docker.volume</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="driver"/>
                <field name="mountpoint"/>
                <field name="scope"/>
                <field name="used_by_container_count"/>
                <field name="size"/>
                <field name="server_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-0">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="float-right">
                                        <span class="badge badge-secondary"><t t-esc="record.driver.value"/></span>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-5">
                                        <strong>Mountpoint:</strong>
                                    </div>
                                    <div class="col-7">
                                        <span><t t-esc="record.mountpoint.value ? record.mountpoint.value.substring(0, 20) + (record.mountpoint.value.length > 20 ? '...' : '') : ''"/></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-5">
                                        <strong>Size:</strong>
                                    </div>
                                    <div class="col-7">
                                        <span><t t-esc="record.size.value || 'Unknown'"/></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-5">
                                        <strong>Server:</strong>
                                    </div>
                                    <div class="col-7">
                                        <span><t t-esc="record.server_id.value[1]"/></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-5">
                                        <strong>Containers:</strong>
                                    </div>
                                    <div class="col-7">
                                        <span><t t-esc="record.used_by_container_count.value"/></span>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span><t t-esc="record.scope.value"/> scope</span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span class="oe_kanban_avatar">
                                        <i class="fa fa-hdd-o" t-attf-style="color: #{record.used_by_container_count.raw_value > 0 ? '#28a745' : '#6c757d'};"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    

    <!-- Graph View -->
    <record id="view_docker_volume_graph" model="ir.ui.view">
        <field name="name">docker.volume.graph</field>
        <field name="model">docker.volume</field>
        <field name="arch" type="xml">
            <graph string="Volume Analysis" type="bar">
                <field name="server_id"/>
                <field name="driver"/>
                <field name="used_by_container_count" type="measure"/>
            </graph>
        </field>
    </record>
    
    <!-- Action Window -->
    <record id="action_docker_volume" model="ir.actions.act_window">
        <field name="name">Volumes</field>
        <field name="res_model">docker.volume</field>
        <field name="view_mode">kanban,tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No volumes found
            </p>
            <p>
                Create volumes or scan your Docker servers to find existing volumes.
            </p>
        </field>
    </record>
</odoo>