<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Docker Security Groups -->
        <record id="module_docker_category" model="ir.module.category">
            <field name="name">Docker Management</field>
            <field name="description">Docker Management Access Rights</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_docker_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_docker_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Docker management users with read-only access</field>
        </record>

        <record id="group_docker_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_docker_category"/>
            <field name="implied_ids" eval="[(4, ref('group_docker_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Docker management administrators with full control</field>
        </record>

        <!-- Record Rules -->
        <record id="docker_server_comp_rule" model="ir.rule">
            <field name="name">Docker Server: Multi-company rule</field>
            <field name="model_id" ref="model_docker_server"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="docker_container_comp_rule" model="ir.rule">
            <field name="name">Docker Container: Multi-company rule</field>
            <field name="model_id" ref="model_docker_container"/>
            <field name="domain_force">['|', ('server_id.company_id', '=', False), ('server_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="docker_image_comp_rule" model="ir.rule">
            <field name="name">Docker Image: Multi-company rule</field>
            <field name="model_id" ref="model_docker_image"/>
            <field name="domain_force">['|', ('server_id.company_id', '=', False), ('server_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="docker_network_comp_rule" model="ir.rule">
            <field name="name">Docker Network: Multi-company rule</field>
            <field name="model_id" ref="model_docker_network"/>
            <field name="domain_force">['|', ('server_id.company_id', '=', False), ('server_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="docker_volume_comp_rule" model="ir.rule">
            <field name="name">Docker Volume: Multi-company rule</field>
            <field name="model_id" ref="model_docker_volume"/>
            <field name="domain_force">['|', ('server_id.company_id', '=', False), ('server_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="docker_task_comp_rule" model="ir.rule">
            <field name="name">Docker Task: Multi-company rule</field>
            <field name="model_id" ref="model_docker_task"/>
            <field name="domain_force">['|', ('server_id.company_id', '=', False), ('server_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="docker_logs_comp_rule" model="ir.rule">
            <field name="name">Docker Logs: Multi-company rule</field>
            <field name="model_id" ref="model_docker_logs"/>
            <field name="domain_force">['|', ('server_id.company_id', '=', False), ('server_id.company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>