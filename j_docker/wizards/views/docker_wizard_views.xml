<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Docker Command Wizard Form View -->
    <record id="view_docker_command_wizard_form" model="ir.ui.view">
        <field name="name">docker.command.wizard.form</field>
        <field name="model">docker.command.wizard</field>
        <field name="arch" type="xml">
            <form string="Execute Docker Command">
                <sheet>
                    <group>
                        <field name="server_id" readonly="context.get('default_server_id')" />
                        <field name="command" placeholder="Enter Docker command (e.g., 'ps -a' or 'images')" />
                        <field name="is_executed" invisible="1" />
                    </group>
                    <group string="Result" attrs="{'invisible': [('is_executed', '=', False)]}">
                        <field name="result" nolabel="1" readonly="1" widget="code" options="{'language': 'text'}" class="text-monospace" />
                    </group>
                </sheet>
                <footer>
                    <button name="action_execute" string="Execute" type="object" class="btn-primary" />
                    <button string="Close" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>