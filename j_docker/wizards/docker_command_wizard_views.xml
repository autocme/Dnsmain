<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Docker Command Wizard Form View -->
    <record id="view_docker_command_wizard_form" model="ir.ui.view">
        <field name="name">j_docker.command.wizard.form</field>
        <field name="model">j_docker.command.wizard</field>
        <field name="arch" type="xml">
            <form string="Execute Docker Command">
                <group>
                    <group>
                        <field name="server_id" options="{'no_create': True}" readonly="context.get('readonly_server')"/>
                        <field name="command" placeholder="e.g. ps -a, images, info, etc." required="1"/>
                        <field name="is_json"/>
                    </group>
                </group>
                <div invisible="result == False">
                    <h3>Result:</h3>
                    <field name="result" readonly="1" widget="ace" options="{'mode': 'json'}" invisible="is_json == False"/>
                    <field name="result" readonly="1" invisible="is_json == True"/>
                </div>
                <footer>
                    <button name="execute_command" string="Execute" type="object" class="btn-primary"/>
                    <button name="save_command" string="Save Command" type="object" class="btn-secondary" 
                            invisible="command == False or command == ''"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Docker Command Wizard Action -->
    <record id="action_docker_command_wizard" model="ir.actions.act_window">
        <field name="name">Execute Docker Command</field>
        <field name="res_model">j_docker.command.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- Docker Server Form View Button -->
    <record id="view_docker_server_form_command_button" model="ir.ui.view">
        <field name="name">j_docker.docker_server.form.command.button</field>
        <field name="model">j_docker.docker_server</field>
        <field name="inherit_id" ref="view_docker_server_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_docker_command_wizard)d" string="Execute Command" type="action" 
                        context="{'default_server_id': active_id, 'readonly_server': True}"/>
            </xpath>
        </field>
    </record>
    
    <!-- Docker Command Menu Item -->
    <menuitem id="menu_docker_command"
              name="Execute Command"
              parent="menu_docker_config"
              action="action_docker_command_wizard"
              sequence="10"/>
</odoo>