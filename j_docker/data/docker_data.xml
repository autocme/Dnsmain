<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Report Paperformat -->
        <record id="paperformat_docker" model="report.paperformat">
            <field name="name">Docker Management US Letter</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">23</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
    </data>

    <data noupdate="1">
        <!-- Default Docker Task Sequences -->
        <record id="sequence_docker_task" model="ir.sequence">
            <field name="name">Docker Task</field>
            <field name="code">docker.task</field>
            <field name="prefix">TASK/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Scheduled Actions for auto-refresh -->
        <record id="ir_cron_docker_server_refresh" model="ir.cron">
            <field name="name">Docker: Refresh Servers Status</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_docker_server"/>
            <field name="state">code</field>
            <field name="code">model._cron_refresh_servers()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
        
        <record id="ir_cron_docker_container_refresh" model="ir.cron">
            <field name="name">Docker: Refresh Containers Status</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_docker_container"/>
            <field name="state">code</field>
            <field name="code">model._cron_refresh_containers()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
        
        <record id="ir_cron_docker_auto_prune" model="ir.cron">
            <field name="name">Docker: Auto Prune Dangling Images</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_docker_server"/>
            <field name="state">code</field>
            <field name="code">model._cron_auto_prune()</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
        
        <!-- Activity Types -->
        <record id="mail_activity_docker_server_check" model="mail.activity.type">
            <field name="name">Docker Server Check</field>
            <field name="icon">fa-server</field>
            <field name="delay_count">2</field>
            <field name="summary">Check server status</field>
            <field name="delay_unit">days</field>
        </record>
        
        <record id="mail_activity_docker_container_check" model="mail.activity.type">
            <field name="name">Docker Container Check</field>
            <field name="icon">fa-cube</field>
            <field name="delay_count">1</field>
            <field name="summary">Check container status</field>
            <field name="delay_unit">days</field>
        </record>
    </data>
</odoo>