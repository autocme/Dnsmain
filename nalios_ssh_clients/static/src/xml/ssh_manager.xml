<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <div t-name="nalios_ssh_clients.ssh_manager" id="ssh_client_container">
        <h1>
            <button t-on-click="exit" class="o_exit btn nav-link me-4">
                <i class="fa fa-chevron-left"/> Go back
            </button>
        SSH Client <span t-ref="clientName"/>
        </h1>
        <div id="ssh_client_terminal">
            <div id="terminal_window" class="m-2" t-ref="terminal"></div>

            <div class="d-flex justify-content-between">
                <div class="w-75 m-2">
                    <input class="form-control" id="inputCommand" placeholder="Enter command here ..." t-on-keydown="inputKeydownSendCommand" type="text" t-ref="cmdline"/>
                </div>
                <div class="w-25 m-2">
                    <button class="btn btn-primary w-100" t-on-click="sendCmd">Send command (Enter)</button>
                </div>
            </div>
        </div>
    </div>
</templates>
