<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Batch Payment Link Wizard Form -->
        <record id="view_batch_payment_link_wizard_form" model="ir.ui.view">
            <field name="name">batch.payment.link.wizard.form</field>
            <field name="model">batch.payment.link.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Batch Payment Link">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="description" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="partner_id" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="invoice_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="total_amount" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Invoices">
                                <field name="invoice_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="invoice_date"/>
                                        <field name="amount_total"/>
                                        <field name="amount_residual"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        
                        <div invisible="not context.get('show_payment_link')">
                            <group string="Payment Link">
                                <field name="payment_link" readonly="1" widget="url"/>
                            </group>
                        </div>
                    </sheet>
                    
                    <footer>
                        <button name="action_generate_payment_link" 
                                string="Generate Payment Link" 
                                type="object" 
                                class="btn-primary"
                                invisible="context.get('show_payment_link')"/>
                        <button name="action_copy_link" 
                                string="Copy Link" 
                                type="object" 
                                class="btn-secondary"
                                invisible="not context.get('show_payment_link')"/>
                        <button string="Close" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>