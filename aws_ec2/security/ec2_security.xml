<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- EC2 Security Groups -->
    <record id="group_ec2_user" model="res.groups">
        <field name="name">EC2 User</field>
        <field name="category_id" ref="boto_base.module_category_boto"/>
        <field name="implied_ids" eval="[(4, ref('boto_base.group_aws_user'))]"/>
    </record>

    <record id="group_ec2_manager" model="res.groups">
        <field name="name">EC2 Manager</field>
        <field name="category_id" ref="boto_base.module_category_boto"/>
        <field name="implied_ids" eval="[(4, ref('group_ec2_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- EC2 Security Rules -->
    <record id="ec2_instance_rule_user" model="ir.rule">
        <field name="name">EC2 Instance: User can only see own instances</field>
        <field name="model_id" ref="model_aws_ec2_instance"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_ec2_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="ec2_instance_rule_manager" model="ir.rule">
        <field name="name">EC2 Instance: Manager can see all instances</field>
        <field name="model_id" ref="model_aws_ec2_instance"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ec2_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>