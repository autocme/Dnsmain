<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VPC Tree View -->
    <record id="view_ec2_vpc_tree" model="ir.ui.view">
        <field name="name">aws.ec2.vpc.tree</field>
        <field name="model">aws.ec2.vpc</field>
        <field name="arch" type="xml">
            <tree string="VPCs" decoration-muted="active == False" decoration-danger="sync_status == 'error'" decoration-success="state == 'available'" decoration-info="state == 'pending'">
                <field name="name"/>
                <field name="vpc_id"/>
                <field name="cidr_block"/>
                <field name="state"/>
                <field name="is_default"/>
                <field name="subnet_count"/>
                <field name="instance_count"/>
                <field name="sync_status"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- VPC Form View -->
    <record id="view_ec2_vpc_form" model="ir.ui.view">
        <field name="name">aws.ec2.vpc.form</field>
        <field name="model">aws.ec2.vpc</field>
        <field name="arch" type="xml">
            <form string="VPC">
                <header>
                    <button name="refresh_vpc_data" string="Refresh" type="object" 
                            invisible="not vpc_id"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,available"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Main VPC"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vpc_id" readonly="1"/>
                            <field name="cidr_block" readonly="vpc_id"/>
                            <field name="is_default" readonly="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="dns_support"/>
                            <field name="dns_hostnames"/>
                            <field name="aws_credentials_id" widget="selection" domain="[('active', '=', True)]"/>
                            <field name="aws_region"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Resources" name="resources">
                            <group>
                                <group string="Subnets">
                                    <field name="subnet_count"/>
                                    <field name="subnet_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="subnet_id"/>
                                            <field name="cidr_block"/>
                                            <field name="availability_zone"/>
                                        </tree>
                                    </field>
                                </group>
                                <group string="Other Resources">
                                    <field name="security_group_count"/>
                                    <field name="route_table_count"/>
                                    <field name="network_acl_count"/>
                                </group>
                            </group>
                        </page>
                        <page string="Instances" name="instances">
                            <field name="instance_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="instance_id"/>
                                    <field name="state"/>
                                    <field name="instance_type"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tags" name="tags">
                            <field name="tags" placeholder="{'Environment': 'Production', 'Project': 'Website'}"/>
                        </page>
                        <page string="Sync Status" name="sync">
                            <group>
                                <field name="sync_status"/>
                                <field name="last_sync" readonly="1"/>
                                <field name="sync_message" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VPC Search View -->
    <record id="view_ec2_vpc_search" model="ir.ui.view">
        <field name="name">aws.ec2.vpc.search</field>
        <field name="model">aws.ec2.vpc</field>
        <field name="arch" type="xml">
            <search string="VPCs">
                <field name="name"/>
                <field name="vpc_id"/>
                <field name="cidr_block"/>
                <filter string="Default VPCs" name="default" domain="[('is_default', '=', True)]"/>
                <filter string="Custom VPCs" name="custom" domain="[('is_default', '=', False)]"/>
                <filter string="With DNS Support" name="dns_support" domain="[('dns_support', '=', True)]"/>
                <filter string="With DNS Hostnames" name="dns_hostnames" domain="[('dns_hostnames', '=', True)]"/>
                <filter string="With Subnets" name="with_subnets" domain="[('subnet_ids', '!=', False)]"/>
                <filter string="With Instances" name="with_instances" domain="[('instance_ids', '!=', False)]"/>
                <filter string="Synced" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Not Synced" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Error" name="error" domain="[('sync_status', '=', 'error')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Default" name="group_by_default" domain="[]" context="{'group_by': 'is_default'}"/>
                    <filter string="Sync Status" name="group_by_sync" domain="[]" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- VPC Action -->
    <record id="action_ec2_vpc" model="ir.actions.act_window">
        <field name="name">VPCs</field>
        <field name="res_model">aws.ec2.vpc</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_ec2_vpc_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first VPC
            </p>
            <p>
                A Virtual Private Cloud (VPC) is a virtual network dedicated to your AWS account.
                It is logically isolated from other virtual networks in the AWS Cloud.
            </p>
        </field>
    </record>

    <!-- Import VPCs Action -->
    <record id="action_import_ec2_vpcs" model="ir.actions.server">
        <field name="name">Import VPCs</field>
        <field name="model_id" ref="model_aws_ec2_vpc"/>
        <field name="binding_model_id" ref="model_aws_ec2_vpc"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.import_vpcs_from_aws()</field>
    </record>

    <!-- Refresh All VPCs Action -->
    <record id="action_refresh_all_ec2_vpcs" model="ir.actions.server">
        <field name="name">Refresh All VPCs</field>
        <field name="model_id" ref="model_aws_ec2_vpc"/>
        <field name="binding_model_id" ref="model_aws_ec2_vpc"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.refresh_all_vpcs()</field>
    </record>
</odoo>