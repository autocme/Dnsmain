<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Subnet Tree View -->
    <record id="view_ec2_subnet_tree" model="ir.ui.view">
        <field name="name">aws.ec2.subnet.tree</field>
        <field name="model">aws.ec2.subnet</field>
        <field name="arch" type="xml">
            <tree string="Subnets" decoration-muted="active == False" decoration-danger="sync_status == 'error'" decoration-success="state == 'available'" decoration-info="state == 'pending'">
                <field name="name"/>
                <field name="subnet_id"/>
                <field name="vpc_id"/>
                <field name="cidr_block"/>
                <field name="availability_zone"/>
                <field name="state"/>
                <field name="map_public_ip"/>
                <field name="instance_count"/>
                <field name="available_ip_address_count"/>
                <field name="sync_status"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Subnet Form View -->
    <record id="view_ec2_subnet_form" model="ir.ui.view">
        <field name="name">aws.ec2.subnet.form</field>
        <field name="model">aws.ec2.subnet</field>
        <field name="arch" type="xml">
            <form string="Subnet">
                <header>
                    <button name="_refresh_subnet_data" string="Refresh" type="object" 
                            attrs="{'invisible': [('subnet_id', '=', False)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,available"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Public Subnet 1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="subnet_id" readonly="1"/>
                            <field name="vpc_id" options="{'no_create': True}" attrs="{'readonly': [('subnet_id', '!=', False)]}"/>
                            <field name="cidr_block" attrs="{'readonly': [('subnet_id', '!=', False)]}"/>
                            <field name="availability_zone" attrs="{'readonly': [('subnet_id', '!=', False)]}"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="map_public_ip"/>
                            <field name="default_for_az" readonly="1"/>
                            <field name="available_ip_address_count" readonly="1"/>
                            <field name="aws_credentials_id" widget="selection" domain="[('active', '=', True)]"/>
                            <field name="aws_region"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Routing" name="routing">
                            <group>
                                <field name="route_table_id" readonly="1"/>
                            </group>
                        </page>
                        <page string="Instances" name="instances">
                            <field name="instance_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="instance_id"/>
                                    <field name="state"/>
                                    <field name="instance_type"/>
                                    <field name="public_ip"/>
                                    <field name="private_ip"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tags" name="tags">
                            <field name="tags" placeholder="{'Environment': 'Production', 'Project': 'Website'}"/>
                        </page>
                        <page string="Sync Status" name="sync">
                            <group>
                                <field name="sync_status"/>
                                <field name="last_sync" readonly="1"/>
                                <field name="sync_message" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Subnet Search View -->
    <record id="view_ec2_subnet_search" model="ir.ui.view">
        <field name="name">aws.ec2.subnet.search</field>
        <field name="model">aws.ec2.subnet</field>
        <field name="arch" type="xml">
            <search string="Subnets">
                <field name="name"/>
                <field name="subnet_id"/>
                <field name="cidr_block"/>
                <field name="availability_zone"/>
                <field name="vpc_id"/>
                <filter string="Default for AZ" name="default_for_az" domain="[('default_for_az', '=', True)]"/>
                <filter string="Public IP Mapping" name="map_public_ip" domain="[('map_public_ip', '=', True)]"/>
                <filter string="With Instances" name="with_instances" domain="[('instance_count', '>', 0)]"/>
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Synced" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Not Synced" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Error" name="error" domain="[('sync_status', '=', 'error')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="VPC" name="group_by_vpc" domain="[]" context="{'group_by': 'vpc_id'}"/>
                    <filter string="Availability Zone" name="group_by_az" domain="[]" context="{'group_by': 'availability_zone'}"/>
                    <filter string="State" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Public IP Mapping" name="group_by_map_public_ip" domain="[]" context="{'group_by': 'map_public_ip'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Subnet Action -->
    <record id="action_ec2_subnet" model="ir.actions.act_window">
        <field name="name">Subnets</field>
        <field name="res_model">aws.ec2.subnet</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_ec2_subnet_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subnet
            </p>
            <p>
                A subnet is a range of IP addresses in your VPC.
                You can launch AWS resources into a specified subnet.
            </p>
        </field>
    </record>

    <!-- Import Subnets Action -->
    <record id="action_import_ec2_subnets" model="ir.actions.server">
        <field name="name">Import Subnets</field>
        <field name="model_id" ref="model_aws_ec2_subnet"/>
        <field name="binding_model_id" ref="model_aws_ec2_subnet"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.import_subnets_from_aws()</field>
    </record>

    <!-- Refresh All Subnets Action -->
    <record id="action_refresh_all_ec2_subnets" model="ir.actions.server">
        <field name="name">Refresh All Subnets</field>
        <field name="model_id" ref="model_aws_ec2_subnet"/>
        <field name="binding_model_id" ref="model_aws_ec2_subnet"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.refresh_all_subnets()</field>
    </record>
</odoo>