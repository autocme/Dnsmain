<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- EC2 Instance Tree View -->
    <record id="view_ec2_instance_tree" model="ir.ui.view">
        <field name="name">aws.ec2.instance.tree</field>
        <field name="model">aws.ec2.instance</field>
        <field name="arch" type="xml">
            <tree string="EC2 Instances" decoration-muted="active == False" decoration-danger="state == 'terminated'" decoration-success="state == 'running'" decoration-info="state == 'pending'" decoration-warning="state == 'stopping'">
                <field name="name"/>
                <field name="instance_id"/>
                <field name="instance_type"/>
                <field name="state"/>
                <field name="public_ip"/>
                <field name="private_ip"/>
                <field name="vpc_id"/>
                <field name="launch_time"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- EC2 Instance Form View -->
    <record id="view_ec2_instance_form" model="ir.ui.view">
        <field name="name">aws.ec2.instance.form</field>
        <field name="model">aws.ec2.instance</field>
        <field name="arch" type="xml">
            <form string="EC2 Instance">
                <header>
                    <button name="action_start" string="Start" type="object" 
                            class="oe_highlight" invisible="state not in ['stopped']"/>
                    <button name="action_stop" string="Stop" type="object" 
                            invisible="state not in ['running', 'pending']"/>
                    <button name="action_reboot" string="Reboot" type="object" 
                            invisible="state not in ['running']"/>
                    <button name="refresh_instance_data" string="Refresh" type="object" 
                            invisible="not instance_id"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,running,stopping,stopped"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Web Server"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="instance_id" readonly="1"/>
                            <field name="instance_type" readonly="instance_id and state != 'stopped'"/>
                            <field name="image_id" readonly="instance_id"/>
                            <field name="key_pair_id" options="{'no_create': True}" readonly="instance_id"/>
                            <field name="launch_time" readonly="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="vpc_id" readonly="instance_id"/>
                            <field name="subnet_id" readonly="instance_id"/>
                            <field name="public_ip" readonly="1"/>
                            <field name="private_ip" readonly="1"/>
                            <field name="monitoring_enabled"/>
                            <field name="termination_protection"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Security Groups" name="security_groups">
                            <field name="security_group_ids" options="{'no_create': True}">
                                <tree>
                                    <field name="name"/>
                                    <field name="group_id"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Network" name="network">
                            <group>
                                <field name="public_dns" readonly="1"/>
                                <field name="private_dns" readonly="1"/>
                            </group>
                        </page>
                        <page string="Status" name="status">
                            <group>
                                <field name="last_status_check" readonly="1"/>
                                <field name="system_status" readonly="1"/>
                                <field name="instance_status" readonly="1"/>
                            </group>
                        </page>
                        <page string="Tags" name="tags">
                            <field name="tags" placeholder="{'Environment': 'Production', 'Project': 'Website'}"/>
                        </page>
                        <page string="Sync Status" name="sync">
                            <group>
                                <field name="sync_status"/>
                                <field name="last_sync" readonly="1"/>
                                <field name="sync_message" readonly="1"/>
                            </group>
                        </page>
                        <page string="Metadata" name="metadata">
                            <field name="metadata" readonly="1" placeholder="Additional metadata from AWS..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- EC2 Instance Search View -->
    <record id="view_ec2_instance_search" model="ir.ui.view">
        <field name="name">aws.ec2.instance.search</field>
        <field name="model">aws.ec2.instance</field>
        <field name="arch" type="xml">
            <search string="EC2 Instances">
                <field name="name"/>
                <field name="instance_id"/>
                <field name="public_ip"/>
                <field name="private_ip"/>
                <field name="vpc_id"/>
                <field name="subnet_id"/>
                <filter string="Running" name="running" domain="[('state', '=', 'running')]"/>
                <filter string="Stopped" name="stopped" domain="[('state', '=', 'stopped')]"/>
                <filter string="Terminated" name="terminated" domain="[('state', '=', 'terminated')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Instance Type" name="group_by_type" domain="[]" context="{'group_by': 'instance_type'}"/>
                    <filter string="VPC" name="group_by_vpc" domain="[]" context="{'group_by': 'vpc_id'}"/>
                    <filter string="Launch Time" name="group_by_launch" domain="[]" context="{'group_by': 'launch_time'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- EC2 Instance Action -->
    <record id="action_ec2_instance" model="ir.actions.act_window">
        <field name="name">EC2 Instances</field>
        <field name="res_model">aws.ec2.instance</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_ec2_instance_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first EC2 instance
            </p>
            <p>
                EC2 instances are virtual servers in the Amazon Web Services cloud.
                You can launch an instance with a few configuration parameters,
                or import existing instances from your AWS account.
            </p>
        </field>
    </record>

    <!-- Import EC2 Instances Action -->
    <record id="action_import_ec2_instances" model="ir.actions.server">
        <field name="name">Import EC2 Instances</field>
        <field name="model_id" ref="model_aws_ec2_instance"/>
        <field name="binding_model_id" ref="model_aws_ec2_instance"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.import_instances_from_aws()</field>
    </record>

    <!-- Refresh All EC2 Instances Action -->
    <record id="action_refresh_all_ec2_instances" model="ir.actions.server">
        <field name="name">Refresh All Instances</field>
        <field name="model_id" ref="model_aws_ec2_instance"/>
        <field name="binding_model_id" ref="model_aws_ec2_instance"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.refresh_all_instances()</field>
    </record>
</odoo>