<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Route 53 Security Groups -->
    <record id="group_route53_user" model="res.groups">
        <field name="name">Route 53 User</field>
        <field name="category_id" ref="boto_base.module_category_aws"/>
        <field name="implied_ids" eval="[(4, ref('boto_base.group_aws_user'))]"/>
    </record>

    <record id="group_route53_manager" model="res.groups">
        <field name="name">Route 53 Manager</field>
        <field name="category_id" ref="boto_base.module_category_aws"/>
        <field name="implied_ids" eval="[(4, ref('group_route53_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- Route 53 Security Rules -->
    <record id="route53_hosted_zone_rule_user" model="ir.rule">
        <field name="name">Route 53 Hosted Zone: User can only see own hosted zones</field>
        <field name="model_id" ref="model_aws_route53_hosted_zone"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_route53_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="route53_hosted_zone_rule_manager" model="ir.rule">
        <field name="name">Route 53 Hosted Zone: Manager can see all hosted zones</field>
        <field name="model_id" ref="model_aws_route53_hosted_zone"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_route53_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="route53_dns_record_rule_user" model="ir.rule">
        <field name="name">Route 53 DNS Record: User can only see records in their hosted zones</field>
        <field name="model_id" ref="model_aws_route53_dns_record"/>
        <field name="domain_force">[('hosted_zone_id.create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_route53_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="route53_dns_record_rule_manager" model="ir.rule">
        <field name="name">Route 53 DNS Record: Manager can see all records</field>
        <field name="model_id" ref="model_aws_route53_dns_record"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_route53_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="route53_health_check_rule_user" model="ir.rule">
        <field name="name">Route 53 Health Check: User can only see own health checks</field>
        <field name="model_id" ref="model_aws_route53_health_check"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_route53_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="route53_health_check_rule_manager" model="ir.rule">
        <field name="name">Route 53 Health Check: Manager can see all health checks</field>
        <field name="model_id" ref="model_aws_route53_health_check"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_route53_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>