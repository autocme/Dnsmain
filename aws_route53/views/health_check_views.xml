<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Health Check Tree View -->
    <record id="view_route53_health_check_tree" model="ir.ui.view">
        <field name="name">aws.route53.health.check.tree</field>
        <field name="model">aws.route53.health.check</field>
        <field name="arch" type="xml">
            <tree string="Health Checks" decoration-muted="active == False" decoration-danger="status == 'unhealthy'" decoration-success="status == 'healthy'" decoration-info="status == 'unknown'">
                <field name="name"/>
                <field name="health_check_id"/>
                <field name="health_check_type"/>
                <field name="endpoint_url"/>
                <field name="endpoint_ip"/>
                <field name="endpoint_port"/>
                <field name="status"/>
                <field name="last_check"/>
                <field name="sync_status"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Health Check Form View -->
    <record id="view_route53_health_check_form" model="ir.ui.view">
        <field name="name">aws.route53.health.check.form</field>
        <field name="model">aws.route53.health.check</field>
        <field name="arch" type="xml">
            <form string="Health Check">
                <header>
                    <button name="refresh_status" string="Refresh Status" type="object" 
                            class="oe_highlight" invisible="not health_check_id"/>
                    <field name="sync_status" widget="statusbar" statusbar_visible="not_synced,syncing,synced,error"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Website Health Check"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="health_check_id" readonly="1"/>
                            <field name="health_check_type"/>
                            <field name="status" readonly="1"/>
                            <field name="last_check" readonly="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="aws_credentials_id" widget="selection" domain="[('active', '=', True)]"/>
                            <field name="aws_region"/>
                            <field name="last_sync" readonly="1"/>
                            <field name="interval_seconds"/>
                            <field name="failure_threshold"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Endpoint Configuration" name="endpoint">
                            <group>
                                <group string="HTTP/HTTPS Configuration" invisible="health_check_type not in ['HTTP', 'HTTPS', 'HTTP_STR_MATCH', 'HTTPS_STR_MATCH']">
                                    <field name="endpoint_url" required="health_check_type in ['HTTP', 'HTTPS', 'HTTP_STR_MATCH', 'HTTPS_STR_MATCH']"/>
                                    <field name="endpoint_path"/>
                                    <field name="endpoint_port"/>
                                    <field name="enable_sni" invisible="health_check_type not in ['HTTPS', 'HTTPS_STR_MATCH']"/>
                                </group>
                                <group string="TCP Configuration" invisible="health_check_type != 'TCP'">
                                    <field name="endpoint_ip" required="health_check_type == 'TCP'"/>
                                    <field name="endpoint_port" required="health_check_type == 'TCP'"/>
                                </group>
                                <group string="String Match Configuration" invisible="health_check_type not in ['HTTP_STR_MATCH', 'HTTPS_STR_MATCH']">
                                    <field name="search_string" required="health_check_type in ['HTTP_STR_MATCH', 'HTTPS_STR_MATCH']"/>
                                    <field name="invert_search"/>
                                </group>
                            </group>
                        </page>
                        <page string="Status" name="status">
                            <group>
                                <field name="last_status_message"/>
                            </group>
                        </page>
                        <page string="Sync Status" name="sync">
                            <group>
                                <field name="sync_message"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Health Check Search View -->
    <record id="view_route53_health_check_search" model="ir.ui.view">
        <field name="name">aws.route53.health.check.search</field>
        <field name="model">aws.route53.health.check</field>
        <field name="arch" type="xml">
            <search string="Health Checks">
                <field name="name"/>
                <field name="health_check_id"/>
                <field name="endpoint_url"/>
                <field name="endpoint_ip"/>
                <filter string="Healthy" name="healthy" domain="[('status', '=', 'healthy')]"/>
                <filter string="Unhealthy" name="unhealthy" domain="[('status', '=', 'unhealthy')]"/>
                <filter string="Unknown" name="unknown" domain="[('status', '=', 'unknown')]"/>
                <separator/>
                <filter string="HTTP" name="http" domain="[('health_check_type', 'in', ['HTTP', 'HTTP_STR_MATCH'])]"/>
                <filter string="HTTPS" name="https" domain="[('health_check_type', 'in', ['HTTPS', 'HTTPS_STR_MATCH'])]"/>
                <filter string="TCP" name="tcp" domain="[('health_check_type', '=', 'TCP')]"/>
                <separator/>
                <filter string="Synced" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Not Synced" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Error" name="error" domain="[('sync_status', '=', 'error')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Type" name="group_by_type" domain="[]" context="{'group_by': 'health_check_type'}"/>
                    <filter string="Sync Status" name="group_by_sync" domain="[]" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Health Check Action -->
    <record id="action_route53_health_check" model="ir.actions.act_window">
        <field name="name">Health Checks</field>
        <field name="res_model">aws.route53.health.check</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_route53_health_check_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first health check
            </p>
            <p>
                Health checks monitor the health of your endpoints and can be used with DNS failover.
            </p>
        </field>
    </record>

    <!-- Import Health Checks Action -->
    <record id="action_import_route53_health_checks" model="ir.actions.server">
        <field name="name">Import Health Checks</field>
        <field name="model_id" ref="model_aws_route53_health_check"/>
        <field name="binding_model_id" ref="model_aws_route53_health_check"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.import_health_checks_from_aws()</field>
    </record>

    <!-- Refresh All Health Checks Action -->
    <record id="action_refresh_all_route53_health_checks" model="ir.actions.server">
        <field name="name">Refresh All Health Checks</field>
        <field name="model_id" ref="model_aws_route53_health_check"/>
        <field name="binding_model_id" ref="model_aws_route53_health_check"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.refresh_all_health_checks()</field>
    </record>
</odoo>