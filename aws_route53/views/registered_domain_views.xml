<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Registered Domain Tree View -->
    <record id="view_route53_registered_domain_tree" model="ir.ui.view">
        <field name="name">aws.route53.registered.domain.tree</field>
        <field name="model">aws.route53.registered.domain</field>
        <field name="arch" type="xml">
            <tree string="Registered Domains" decoration-muted="active == False" decoration-danger="status in ('expired', 'pending_delete')" decoration-warning="status in ('pending', 'pending_transfer', 'redemption_period')" decoration-info="status == 'transferring_away'" decoration-success="status in ('registered', 'auto_renewing')">
                <field name="domain_name"/>
                <field name="status"/>
                <field name="expiration_date"/>
                <field name="auto_renew"/>
                <field name="transfer_lock"/>
                <field name="hosted_zone_id"/>
                <field name="sync_status"/>
                <field name="last_sync"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Registered Domain Form View -->
    <record id="view_route53_registered_domain_form" model="ir.ui.view">
        <field name="name">aws.route53.registered.domain.form</field>
        <field name="model">aws.route53.registered.domain</field>
        <field name="arch" type="xml">
            <form string="Registered Domain">
                <header>
                    <button name="refresh_domain_data" string="Refresh" type="object" 
                            class="oe_highlight"/>
                    <button name="create_hosted_zone" string="Create Hosted Zone" type="object" 
                            invisible="hosted_zone_id"
                            class="oe_highlight"/>
                    <field name="status" widget="statusbar" statusbar_visible="registered,pending,expired,redemption_period"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="domain_name" placeholder="e.g. example.com"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="hosted_zone_id"/>
                            <field name="expiration_date" readonly="1"/>
                            <field name="registration_date" readonly="1"/>
                            <field name="updated_date" readonly="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="auto_renew"/>
                            <field name="transfer_lock"/>
                            <field name="aws_credentials_id" widget="selection" domain="[('active', '=', True)]"/>
                            <field name="aws_region"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Name Servers" name="name_servers">
                            <field name="name_servers" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Contact Information" name="contacts">
                            <group>
                                <group string="Registrant Contact">
                                    <field name="registrant_contact" widget="ace" options="{'mode': 'json'}"/>
                                    <field name="registrant_privacy"/>
                                </group>
                                <group string="Admin Contact">
                                    <field name="admin_contact" widget="ace" options="{'mode': 'json'}"/>
                                    <field name="admin_privacy"/>
                                </group>
                            </group>
                            <group>
                                <group string="Technical Contact">
                                    <field name="tech_contact" widget="ace" options="{'mode': 'json'}"/>
                                    <field name="tech_privacy"/>
                                </group>
                            </group>
                        </page>
                        <page string="Sync Status" name="sync">
                            <group>
                                <field name="sync_status"/>
                                <field name="sync_message"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Registered Domain Search View -->
    <record id="view_route53_registered_domain_search" model="ir.ui.view">
        <field name="name">aws.route53.registered.domain.search</field>
        <field name="model">aws.route53.registered.domain</field>
        <field name="arch" type="xml">
            <search string="Registered Domains">
                <field name="domain_name"/>
                <field name="status"/>
                <field name="hosted_zone_id"/>
                <filter string="Registered" name="registered" domain="[('status', '=', 'registered')]"/>
                <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                <filter string="Expired" name="expired" domain="[('status', '=', 'expired')]"/>
                <filter string="Redemption Period" name="redemption_period" domain="[('status', '=', 'redemption_period')]"/>
                <filter string="Auto Renewing" name="auto_renewing" domain="[('status', '=', 'auto_renewing')]"/>
                <filter string="Auto-Renew Enabled" name="auto_renew" domain="[('auto_renew', '=', True)]"/>
                <filter string="Auto-Renew Disabled" name="no_auto_renew" domain="[('auto_renew', '=', False)]"/>
                <filter string="Transfer Lock Enabled" name="transfer_lock" domain="[('transfer_lock', '=', True)]"/>
                <filter string="With Hosted Zone" name="with_hosted_zone" domain="[('hosted_zone_id', '!=', False)]"/>
                <filter string="Without Hosted Zone" name="without_hosted_zone" domain="[('hosted_zone_id', '=', False)]"/>
                <filter string="Expiring Soon" name="expiring_soon" domain="[('expiration_date', '&lt;=', (context_today()+datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <filter string="Synced" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Not Synced" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Error" name="error" domain="[('sync_status', '=', 'error')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Hosted Zone" name="group_by_hosted_zone" domain="[]" context="{'group_by': 'hosted_zone_id'}"/>
                    <filter string="Auto-Renew" name="group_by_auto_renew" domain="[]" context="{'group_by': 'auto_renew'}"/>
                    <filter string="Transfer Lock" name="group_by_transfer_lock" domain="[]" context="{'group_by': 'transfer_lock'}"/>
                    <filter string="Sync Status" name="group_by_sync" domain="[]" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Registered Domain Action -->
    <record id="action_route53_registered_domain" model="ir.actions.act_window">
        <field name="name">Registered Domains</field>
        <field name="res_model">aws.route53.registered.domain</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_route53_registered_domain_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Import your first registered domain
            </p>
            <p>
                You can import domains registered through AWS Route 53 or register new domains directly from Odoo.
            </p>
        </field>
    </record>

    <!-- Import Registered Domains Action -->
    <record id="action_import_route53_registered_domains" model="ir.actions.server">
        <field name="name">Import Registered Domains</field>
        <field name="model_id" ref="model_aws_route53_registered_domain"/>
        <field name="binding_model_id" ref="model_aws_route53_registered_domain"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.import_registered_domains_from_aws()</field>
    </record>

    <!-- Refresh All Domains Action -->
    <record id="action_refresh_all_route53_registered_domains" model="ir.actions.server">
        <field name="name">Refresh All Domains</field>
        <field name="model_id" ref="model_aws_route53_registered_domain"/>
        <field name="binding_model_id" ref="model_aws_route53_registered_domain"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.refresh_all_domains()</field>
    </record>
</odoo>