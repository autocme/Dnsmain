<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- DNS Record Tree View -->
    <record id="view_route53_dns_record_tree" model="ir.ui.view">
        <field name="name">aws.route53.dns.record.tree</field>
        <field name="model">aws.route53.dns.record</field>
        <field name="arch" type="xml">
            <tree string="DNS Records" decoration-muted="active == False" decoration-danger="sync_status == 'error'" decoration-info="sync_status == 'syncing'">
                <field name="name"/>
                <field name="domain_name"/>
                <field name="type"/>
                <field name="ttl"/>
                <field name="value"/>
                <field name="sync_status"/>
                <field name="last_sync"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- DNS Record Form View -->
    <record id="view_route53_dns_record_form" model="ir.ui.view">
        <field name="name">aws.route53.dns.record.form</field>
        <field name="model">aws.route53.dns.record</field>
        <field name="arch" type="xml">
            <form string="DNS Record">
                <header>
                    <field name="sync_status" widget="statusbar" statusbar_visible="not_synced,syncing,synced,error"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="record_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="hosted_zone_id" options="{'no_create': True, 'no_open': False}"/>
                            <field name="domain_name" readonly="1"/>
                            <field name="name" placeholder="e.g. www or @ for root domain"/>
                            <field name="type"/>
                            <field name="ttl"/>
                        </group>
                        <group>
                            <field name="aws_record_id" readonly="1"/>
                            <field name="active"/>
                            <field name="aws_credentials_id" widget="selection" domain="[('active', '=', True)]"/>
                            <field name="aws_region"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Value" name="value">
                            <field name="value" placeholder="Enter record value(s)..." help="For multiple values, separate with semicolons (;)"/>
                        </page>
                        <page string="Sync Status" name="sync">
                            <group>
                                <field name="sync_message"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- DNS Record Search View -->
    <record id="view_route53_dns_record_search" model="ir.ui.view">
        <field name="name">aws.route53.dns.record.search</field>
        <field name="model">aws.route53.dns.record</field>
        <field name="arch" type="xml">
            <search string="DNS Records">
                <field name="name"/>
                <field name="domain_name"/>
                <field name="record_name"/>
                <field name="value"/>
                <field name="hosted_zone_id"/>
                <filter string="A Records" name="a_records" domain="[('type', '=', 'A')]"/>
                <filter string="CNAME Records" name="cname_records" domain="[('type', '=', 'CNAME')]"/>
                <filter string="MX Records" name="mx_records" domain="[('type', '=', 'MX')]"/>
                <filter string="TXT Records" name="txt_records" domain="[('type', '=', 'TXT')]"/>
                <filter string="NS Records" name="ns_records" domain="[('type', '=', 'NS')]"/>
                <separator/>
                <filter string="Synced" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Not Synced" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Error" name="error" domain="[('sync_status', '=', 'error')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Domain" name="group_by_domain" domain="[]" context="{'group_by': 'domain_name'}"/>
                    <filter string="Hosted Zone" name="group_by_zone" domain="[]" context="{'group_by': 'hosted_zone_id'}"/>
                    <filter string="Record Type" name="group_by_type" domain="[]" context="{'group_by': 'type'}"/>
                    <filter string="Sync Status" name="group_by_sync" domain="[]" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- DNS Record Action -->
    <record id="action_route53_dns_record" model="ir.actions.act_window">
        <field name="name">DNS Records</field>
        <field name="res_model">aws.route53.dns.record</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_route53_dns_record_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first DNS record
            </p>
            <p>
                DNS records define how domain and subdomains are routed on the internet.
            </p>
        </field>
    </record>
</odoo>